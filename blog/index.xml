---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	
	<title type="text" xml:lang="en">{{ site.root_desc }}</title>
	<link type="application/atom+xml" href="http://glass.lu/blog/index.xml" rel="self"/>
 	<link type="text" href="http://glass.lu/blog/index.html" rel="alternate"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>http://glass.lu/blog/index.html</id>
	<author>
		<name>Glass.Mapper</name>
	</author>
	<rights></rights>
	
	{% for post in site.posts %}
	<entry>
		<title>{{ post.title }}</title>
		<link href="http://glass.lu{{ post.url }}"/>
		<updated>{{ post.date | date_to_xmlschema }}</updated>
		<id>http://glass.lu{{ post.id }}</id>
		<content type="html">{{ post.content | xml_escape }}</content>
	</entry>
	{% endfor %}
</feed>